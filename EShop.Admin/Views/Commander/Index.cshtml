@model IEnumerable<EShop.Admin.Models.Commander.CommandGridListItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int queueNumber = 0;
}

<div>
    REST and Postman test
</div>

<div class="m-1">
    <a asp-action="add" asp-controller="commander" type="submit" class="btn btn-primary">Add</a>
</div>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">How To</th>
                <th scope="col">Line</th>
                <th scope="col">Platfrom</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        <tbody>
            @foreach (var command in Model)
            {
                queueNumber += 1;
                <tr>
                    <th scope="row">@queueNumber</th>
                    <td class="">@command.HowTo</td>
                    <td class="">@command.Line</td>
                    <td class="">@command.Platfrom</td>

                    <td class="">
                        <a asp-action="edit" asp-controller="commander" asp-route-id="@command.Id" class="btn btn-primary">Edit</a>
                        <input asp-action="delete" asp-controller="commander" asp-route-id="@command.Id" type="submit" class="btn btn-danger" value="Delete">
                    </td>
                    <td class="">
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>