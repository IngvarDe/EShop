
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

@model EShop.Admin.Models.Commander.CommandViewModel


@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Add</h1>
}

<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        @*<input asp-for="CreatedAt" type="hidden" />
        <input asp-for="ModifiedAt" type="hidden" />*@

        <div class="form-group row">
            <label asp-for="HowTo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="HowTo" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Line" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Line" class="form-control" rows="5"></textarea>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Platfrom" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Platfrom" class="form-control" rows="5"></textarea>
            </div>
        </div>

        @if (Model.Id.HasValue)
        {
            <input asp-action="edit" asp-controller="commander" type="submit" class="btn btn-primary" value="Update">
            <input asp-action="delete" asp-controller="commander" asp-for="Id" type="submit" class="btn btn-danger" value="Delete">
        }
        else
        {
            <input asp-action="add" asp-controller="commander" type="submit" class="btn btn-primary" value="Add">
        }
        <a asp-action="index" class="btn btn-primary">Index</a>

    </form>
</div>