@model EShop.Admin.Models.Product.ProductViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div>
    <form method="post">
        <input asp-for="Id" type="hidden" />

        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Description" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Value" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Value" class="form-control" />
            </div>
        </div>

        <input class="btn btn-primary" type="submit" value="Save Product" />

        <a asp-action="index" asp-controller="product" class="btn btn-primary">Index</a>
    </form>
</div>