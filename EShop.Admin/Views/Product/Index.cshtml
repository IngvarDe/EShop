@model IEnumerable<EShop.Admin.Models.Product.ProductGridListItem>

@{
    ViewData["Title"] = "Index";
    int queueNumber = 0;
}

<div>
    <a asp-action="add" asp-controller="product" type="submit" class="btn btn-primary">Add</a>
</div>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Name</th>
                <th scope="col">Decription</th>
                <th scope="col">Price</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        <tbody>
            @foreach (var product in Model)
            {
                queueNumber += 1;
                <tr>
                    <th scope="row">@queueNumber</th>
                    <td class="">@product.Name</td>
                    <td class="">@product.Description</td>
                    <td class="">@product.Value</td>

                    <td class="">
                        <a asp-action="edit" asp-controller="product" asp-route-id="@product.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="delete" asp-controller="product" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                    </td>
                    <td class=""></td>
                </tr>
            }
        </tbody>
    </table>
</form>