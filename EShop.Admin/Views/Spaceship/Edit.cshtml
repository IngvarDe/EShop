@model EShop.Admin.Models.Spaceship.SpaceshipViewModel


@{
    Layout = null;
}


@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Add</h1>
}

<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <input asp-for="CreatedAt" type="hidden" />
        <input asp-for="ModifiedAt" type="hidden" />

        <div class="form-group row">
            <label asp-for="CrewSize" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="CrewSize" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Armament" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Armament" class="form-control" rows="5"></textarea>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Role" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Role" class="form-control" rows="5"></textarea>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Image" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <div class="custom-file">
                    <input class="form-control custom-file-input" asp-for="Image" multiple type="file" />
                    <label class="custom-file-label">Choose File...</label>
                </div>
            </div>
        </div>

        @foreach (var image in Model.Image)
        {
            <partial name="_Image" model="image" />
        }

        @*<div class="form-group row">
            <label asp-for="" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="" class="form-control" />
            </div>
        </div>*@

        @if (Model.Id.HasValue)
        {
            <input asp-action="edit" asp-controller="product" type="submit" class="btn btn-primary" value="Update">
            <input asp-action="delete" asp-controller="product" asp-for="Id" type="submit" class="btn btn-danger" value="Delete">
        }
        else
        {
            <input asp-action="add" asp-controller="product" type="submit" class="btn btn-primary" value="Add">
        }
        <a asp-action="index" class="btn btn-primary">Index</a>

    </form>
</div>


